<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
      <h2>Edit <%= campground.name  %></h2>
      <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name='campground[name]'
          value='<%= campground.name %>'
          placeholder="Enter campground name">
        </div>
        <div class="form-group">
          <label>Image URL</label>
          <input type="text" class="form-control" name='campground[image]'
          value='<%= campground.image  %>'
          placeholder="Enter image URL">
        </div>
        <div class="form-group">
          <label>Description</label>
          <input type="text" class='form-control' name='campground[description]'
          value='<%= campground.description %>'
          placeholder="Enter description">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer %>
